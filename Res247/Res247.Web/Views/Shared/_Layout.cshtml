<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 247 Restaurant</title>
    <link rel="stylesheet" href="~/assets/css/homecss.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link rel="stylesheet" href="~/assets/css/style.css">
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <header>
        <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
            <div class="position-sticky">
                <div class="list-group list-group-flush mx-3 mt-4">
                    @Html.Action("GetAllCategory", "Category")
                </div>
            </div>
        </nav>
        <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
            <div class="container-fluid">

                <h1>@Html.ActionLink("247 Restaurant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</h1>

                <ul class="navbar-nav ms-auto d-flex flex-row">

                    <li class="nav-item">
                        <a class="nav-link me-3 me-lg-0" href="/Cart/Index">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </li>

                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </nav>
    </header>
    <main style="margin-top: 58px;">
        <div class="container pt-4">
            @RenderBody()
        </div>
        @Html.Partial("_Footer")
    </main>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
