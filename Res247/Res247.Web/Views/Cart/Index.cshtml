@model List<CartItemViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Giỏ Hàng</h2>
<table class="table">
    <tr>
        <td>Sản Phẩm</td>
        <td>Đơn Giá</td>
        <td>Số Lượng</td>
        <td>Hành Động</td>
    </tr>

    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>@Model.ElementAt(i).Food.Name</td>
            <td>@Model.ElementAt(i).Food.Price</td>
            <td>@Model.ElementAt(i).Quantity</td>
            <td><a href="@Url.Action("RemoveItem", "Cart", new {itemIndex = i})" class="btn btn-outline-danger">Xóa</a></td>
        </tr>
    }
    @if (ViewBag.TotalPrice > 0)
    {
        <tr>
            <td>Total Price: @ViewBag.TotalPrice</td>
        </tr>
    }
</table>